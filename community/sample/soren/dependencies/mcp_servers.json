{
  "schema_version": 1,
  "servers": [
    {
      "name": "mcp-shell-safe",
      "description": "Restricted local shell command execution (allowlist)",
      "default_port": 9113,
      "source": {
        "type": "external",
        "git": "https://github.com/HomePilotAI/mcp-servers",
        "ref": "v0.1.0",
        "subdir": "servers/mcp-shell-safe"
      },
      "transport": "HTTP",
      "protocol": "MCP",
      "tools_provided": [
        "hp.shell_safe.shell.allowed",
        "hp.shell_safe.shell.run"
      ],
      "health_check": {
        "method": "POST",
        "path": "/rpc",
        "body": {
          "jsonrpc": "2.0",
          "method": "initialize",
          "id": 1
        }
      }
    }
  ]
}
