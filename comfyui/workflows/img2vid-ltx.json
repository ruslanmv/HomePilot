{
  "_meta": {
    "title": "LTX-Video Image to Video",
    "description": "Image-to-video using LTX-Video 2B. Requires ComfyUI-LTXVideo nodes and T5 text encoder.",
    "optimal_settings": {
      "resolution": "768x512",
      "cfg": "3.0-4.0",
      "steps": "30-50",
      "fps": "24"
    }
  },
  "1": {
    "class_type": "LoadImage",
    "inputs": {
      "image": "{{image_path}}"
    }
  },
  "2": {
    "class_type": "LTXVLoader",
    "inputs": {
      "ckpt_name": "ltx-video-2b-v0.9.1.safetensors",
      "dtype": "bfloat16"
    }
  },
  "3": {
    "class_type": "CLIPLoader",
    "inputs": {
      "clip_name": "t5xxl_fp16.safetensors",
      "type": "ltxv"
    }
  },
  "4": {
    "class_type": "CLIPTextEncode",
    "inputs": {
      "text": "{{prompt}}, smooth motion, high quality, cinematic",
      "clip": ["3", 0]
    }
  },
  "5": {
    "class_type": "CLIPTextEncode",
    "inputs": {
      "text": "blurry, low quality, distorted, watermark, text, static, frozen, jittery",
      "clip": ["3", 0]
    }
  },
  "6": {
    "class_type": "ImageScaleToTotalPixels",
    "inputs": {
      "image": ["1", 0],
      "upscale_method": "lanczos",
      "megapixels": 0.4,
      "resolution_steps": 64
    }
  },
  "7": {
    "class_type": "LTXVImgToVideo",
    "inputs": {
      "positive": ["4", 0],
      "negative": ["5", 0],
      "vae": ["2", 1],
      "image": ["6", 0],
      "width": 768,
      "height": 512,
      "length": "{{frames}}",
      "batch_size": 1
    }
  },
  "8": {
    "class_type": "LTXVScheduler",
    "inputs": {
      "steps": 40,
      "max_shift": 2.05,
      "base_shift": 0.95,
      "stretch": true,
      "terminal": 0.1,
      "latent": ["7", 0]
    }
  },
  "9": {
    "class_type": "KSamplerSelect",
    "inputs": {
      "sampler_name": "euler"
    }
  },
  "10": {
    "class_type": "SamplerCustom",
    "inputs": {
      "model": ["2", 0],
      "add_noise": true,
      "noise_seed": "{{seed}}",
      "cfg": 3.5,
      "positive": ["4", 0],
      "negative": ["5", 0],
      "sampler": ["9", 0],
      "sigmas": ["8", 0],
      "latent_image": ["7", 0]
    }
  },
  "11": {
    "class_type": "VAEDecode",
    "inputs": {
      "samples": ["10", 0],
      "vae": ["2", 1]
    }
  },
  "12": {
    "class_type": "SaveAnimatedWEBP",
    "inputs": {
      "images": ["11", 0],
      "fps": "{{fps}}",
      "lossless": false,
      "quality": 85,
      "method": "default",
      "filename_prefix": "ltx_video"
    }
  }
}
