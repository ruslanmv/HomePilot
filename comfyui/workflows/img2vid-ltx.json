{
  "_meta": {
    "title": "LTX-Video Image to Video",
    "description": "Image-to-video using LTX-Video 2B with built-in ComfyUI nodes. Requires T5 text encoder in clip folder.",
    "optimal_settings": {
      "resolution": "768x512",
      "cfg": "3.0-4.0",
      "steps": "30-50",
      "fps": "24"
    }
  },
  "1": {
    "class_type": "LoadImage",
    "inputs": {
      "image": "{{image_path}}"
    }
  },
  "2": {
    "class_type": "CheckpointLoaderSimple",
    "inputs": {
      "ckpt_name": "ltx-video-2b-v0.9.1.safetensors"
    }
  },
  "3": {
    "class_type": "CLIPLoader",
    "inputs": {
      "clip_name": "t5xxl_fp16.safetensors",
      "type": "ltxv"
    }
  },
  "4": {
    "class_type": "CLIPTextEncode",
    "inputs": {
      "text": "{{prompt}}, smooth motion, high quality, cinematic",
      "clip": ["3", 0]
    }
  },
  "5": {
    "class_type": "CLIPTextEncode",
    "inputs": {
      "text": "blurry, low quality, distorted, watermark, text, static, frozen, jittery",
      "clip": ["3", 0]
    }
  },
  "6": {
    "class_type": "ImageScaleToTotalPixels",
    "inputs": {
      "image": ["1", 0],
      "upscale_method": "lanczos",
      "megapixels": 0.4,
      "resolution_steps": 64
    }
  },
  "7": {
    "class_type": "VAEEncode",
    "inputs": {
      "pixels": ["6", 0],
      "vae": ["2", 2]
    }
  },
  "8": {
    "class_type": "RepeatLatentBatch",
    "inputs": {
      "samples": ["7", 0],
      "amount": "{{frames}}"
    }
  },
  "9": {
    "class_type": "KSampler",
    "inputs": {
      "seed": "{{seed}}",
      "steps": 40,
      "cfg": 3.5,
      "sampler_name": "euler",
      "scheduler": "normal",
      "denoise": 0.85,
      "model": ["2", 0],
      "positive": ["4", 0],
      "negative": ["5", 0],
      "latent_image": ["8", 0]
    }
  },
  "10": {
    "class_type": "VAEDecode",
    "inputs": {
      "samples": ["9", 0],
      "vae": ["2", 2]
    }
  },
  "11": {
    "class_type": "SaveAnimatedWEBP",
    "inputs": {
      "images": ["10", 0],
      "fps": "{{fps}}",
      "lossless": false,
      "quality": 85,
      "method": "default",
      "filename_prefix": "ltx_video"
    }
  }
}
