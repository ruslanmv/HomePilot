# Copy to .env and edit

# Frontend
VITE_API_URL=http://localhost:8000

# Optional API key (if set, backend requires it)
API_KEY=

# Backend -> LLM (vLLM OpenAI compatible)
LLM_BASE_URL=http://llm:8001/v1
LLM_MODEL=local-model

# Backend -> ComfyUI
COMFY_BASE_URL=http://comfyui:8188

# Backend -> Media service
MEDIA_BASE_URL=http://media:8002

# Storage
SQLITE_PATH=/app/data/homepilot.db
UPLOAD_DIR=/app/data/uploads
OUTPUT_DIR=/outputs

# Tool timeouts
TOOL_TIMEOUT_S=300
COMFY_POLL_INTERVAL_S=1.0
COMFY_POLL_MAX_S=240

# CORS (dev-friendly; tighten in production)
CORS_ORIGINS=http://localhost:3000
