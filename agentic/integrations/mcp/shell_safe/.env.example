# mcp-shell-safe configuration
# ─────────────────────────────────────────────────────────────
# Safety defaults (mandatory)
WRITE_ENABLED=false
DRY_RUN=true

# Server
PORT=9113
HOST=0.0.0.0

# Allowed commands (comma-separated)
ALLOWED_COMMANDS=ls,cat,head,tail,wc,grep,find,echo,date,whoami,pwd,df,du,uname,python3,pip,git,make,npm
# Execution limits
EXEC_TIMEOUT=30
MAX_OUTPUT_BYTES=1048576
# Safe working directory (restrict cwd to this root)
SAFE_CWD=/home/user
# Disable network commands
ALLOW_NETWORK_COMMANDS=false
