{
  "schema_version": "1.2",
  "defaults": {
    "sampler": "euler",
    "scheduler": "normal",
    "notes": "sampler/scheduler are informational; workflows may hardcode them."
  },

  "aspect_ratios": {
    "16:9": {
      "ui_label": "Widescreen (16:9)",
      "compatible_models": ["svd", "ltx", "wan", "hunyuan", "mochi", "cogvideo"],
      "dimensions": {
        "low":    { "width": 640, "height": 352 },
        "medium": { "width": 832, "height": 480 },
        "high":   { "width": 1024, "height": 576 },
        "ultra":  { "width": 1280, "height": 720 }
      }
    },
    "9:16": {
      "ui_label": "Vertical / Mobile (9:16)",
      "compatible_models": ["wan", "hunyuan", "ltx"],
      "dimensions": {
        "low":    { "width": 352, "height": 640 },
        "medium": { "width": 480, "height": 832 },
        "high":   { "width": 576, "height": 1024 },
        "ultra":  { "width": 720, "height": 1280 }
      },
      "notes": "Excluded SVD, Mochi, and CogVideo due to poor vertical training data."
    },
    "1:1": {
      "ui_label": "Square (1:1)",
      "compatible_models": ["wan", "hunyuan", "ltx", "cogvideo"],
      "dimensions": {
        "low":    { "width": 512, "height": 512 },
        "medium": { "width": 768, "height": 768 },
        "high":   { "width": 1024, "height": 1024 },
        "ultra":  { "width": 1024, "height": 1024 }
      },
      "notes": "Excluded SVD and Mochi (landscape bias)."
    },
    "4:3": {
      "ui_label": "Classic TV (4:3)",
      "compatible_models": ["wan", "hunyuan", "ltx", "mochi", "cogvideo"],
      "dimensions": {
        "low":    { "width": 640, "height": 480 },
        "medium": { "width": 896, "height": 672 },
        "high":   { "width": 1024, "height": 768 },
        "ultra":  { "width": 1152, "height": 864 }
      }
    },
    "3:4": {
      "ui_label": "Portrait (3:4)",
      "compatible_models": ["wan", "hunyuan", "ltx"],
      "dimensions": {
        "low":    { "width": 480, "height": 640 },
        "medium": { "width": 672, "height": 896 },
        "high":   { "width": 768, "height": 1024 },
        "ultra":  { "width": 864, "height": 1152 }
      }
    }
  },

  "presets": {
    "low": {
      "ui": {
        "label": "Low (Fast)",
        "short": "Fastest + most stable",
        "description": "For 6-8GB VRAM. Uses lower resolutions and fewer steps."
      },
      "base": {
        "fps": 8,
        "seconds": 2,
        "frames": 25,
        "steps": 20,
        "cfg": 2.5,
        "denoise": 0.75,
        "max_frames": 25
      },
      "model_overrides": {
        "svd": { "fps": 6, "steps": 16, "cfg": 2.2, "denoise": 1.0 },
        "ltx": { "fps": 24, "steps": 20, "cfg": 4.0, "denoise": 0.8 },
        "wan": { "fps": 16, "steps": 20, "cfg": 4.0, "denoise": 1.0, "notes": "Use Wan 1.3B only" }
      }
    },

    "medium": {
      "ui": {
        "label": "Medium (Balanced)",
        "short": "Quality vs speed",
        "description": "For 10-12GB VRAM. Standard resolutions (480p)."
      },
      "base": {
        "fps": 16,
        "seconds": 4,
        "frames": 49,
        "steps": 30,
        "cfg": 3.5,
        "denoise": 0.85,
        "max_frames": 65
      },
      "model_overrides": {
        "svd": { "fps": 8, "steps": 20, "cfg": 2.5, "denoise": 1.0 },
        "ltx": { "fps": 24, "steps": 24, "cfg": 4.0, "denoise": 0.8 },
        "wan": { "fps": 16, "steps": 30, "cfg": 5.0, "denoise": 1.0 },
        "hunyuan": { "fps": 16, "steps": 25, "cfg": 6.0, "denoise": 1.0, "notes": "Requires GGUF/Quantization on 12GB" },
        "mochi": { "fps": 24, "frames": 37, "steps": 40, "cfg": 4.5, "denoise": 1.0, "notes": "Requires FP8/Offloading on 12GB" }
      }
    },

    "high": {
      "ui": {
        "label": "High (Quality)",
        "short": "Highest quality",
        "description": "For 16GB+ VRAM. HD resolutions and high step counts."
      },
      "base": {
        "fps": 24,
        "seconds": 4,
        "frames": 97,
        "steps": 40,
        "cfg": 4.0,
        "denoise": 0.9,
        "max_frames": 97
      },
      "model_overrides": {
        "svd": { "fps": 8, "frames": 25, "steps": 25, "cfg": 2.5 },
        "ltx": { "steps": 30, "cfg": 4.0, "denoise": 0.8 },
        "wan": { "steps": 35, "cfg": 5.0, "denoise": 1.0 },
        "hunyuan": { "steps": 30, "cfg": 6.0, "denoise": 1.0 },
        "mochi": { "frames": 85, "steps": 50, "cfg": 4.5, "denoise": 1.0 },
        "cogvideo": { "fps": 8, "frames": 49, "steps": 50, "cfg": 6.0, "denoise": 1.0 }
      }
    },

    "ultra": {
      "ui": {
        "label": "Ultra (Maximum)",
        "short": "Best possible",
        "description": "For 24GB+ VRAM. Maximum detail and length."
      },
      "base": {
        "fps": 24,
        "seconds": 6,
        "frames": 129,
        "steps": 50,
        "cfg": 5.0,
        "denoise": 0.95,
        "max_frames": 129
      },
      "model_overrides": {
        "svd": { "frames": 25, "steps": 30 },
        "ltx": { "frames": 97, "steps": 35 },
        "wan": { "frames": 129, "steps": 40, "cfg": 5.5 },
        "hunyuan": { "frames": 129, "steps": 40, "cfg": 6.0 },
        "mochi": { "frames": 163, "steps": 60, "cfg": 4.5 },
        "cogvideo": { "frames": 49, "steps": 60, "cfg": 6.0 }
      }
    }
  },

  "model_rules": {
    "svd": {
      "frame_rule": "fixed",
      "fixed_frames": 25,
      "fixed_denoise": 1.0,
      "default_negative_prompt": "text, watermark, logo, low quality, blurry, flicker, jitter",
      "notes": "SVD is strictly 16:9 / 1024x576. Other ratios will fail."
    },
    "ltx": {
      "frame_rule": "8n+1",
      "valid_frames": [9, 17, 25, 33, 41, 49, 57, 65, 73, 81, 89, 97, 105, 113, 121, 129, 137, 145, 153],
      "min_frames": 25,
      "default_negative_prompt": "text, watermark, logo, low quality, blurry, flicker, jitter, warping, deformed",
      "notes": "Highly flexible ratio support. Best motion at 24fps."
    },
    "mochi": {
      "frame_rule": "6n+1",
      "valid_frames": [37, 43, 49, 55, 61, 67, 73, 79, 85, 91, 97, 103, 109, 115, 121, 127, 133, 139, 145, 151, 157, 163],
      "min_frames": 37,
      "default_negative_prompt": "text, watermark, logo, low quality, blurry, flicker, jitter, deformed",
      "notes": "Strictly Landscape (16:9, 4:3, 21:9). Vertical ratios will fail."
    },
    "wan": {
      "frame_rule": "any",
      "default_negative_prompt": "text, watermark, logo, low quality, blurry, flicker, jitter, deformed",
      "notes": "Supports all aspect ratios including vertical."
    },
    "hunyuan": {
      "frame_rule": "any",
      "default_negative_prompt": "text, watermark, logo, low quality, blurry, flicker, jitter, deformed",
      "notes": "Supports all aspect ratios including vertical."
    },
    "cogvideo": {
      "frame_rule": "any",
      "fixed_frames": 49,
      "default_negative_prompt": "text, watermark, logo, low quality, blurry, flicker, jitter",
      "notes": "Best at 16:9. Vertical is weak."
    }
  },

  "vram_auto_select": {
    "rules": [
      {"max_vram_gb": 8, "preset": "low"},
      {"max_vram_gb": 12, "preset": "medium"},
      {"max_vram_gb": 20, "preset": "high"},
      {"max_vram_gb": 999, "preset": "ultra"}
    ],
    "fallback": "medium"
  },

  "model_min_vram": {
    "svd": 6,
    "ltx": 8,
    "wan": 10,
    "hunyuan": 12,
    "mochi": 16,
    "cogvideo": 16
  }
}
