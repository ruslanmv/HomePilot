  "model_rules": {
    "svd": {
      "frame_rule": "fixed",
      "fixed_frames": 25,
      "fixed_denoise": 1.0,
      "notes": "SVD always uses exactly 25 frames"
    },
    "ltx": {
      "frame_rule": "any",
      "min_frames": 9,
      "notes": "LTX works best with frames = seconds * fps (no rounding needed)"
    },
    "mochi": {
      "frame_rule": "6n+1",
      "valid_frames": [37, 43, 49, 55, 61, 67, 73, 79, 85, 91, 97, 103, 109, 115, 121, 127, 133, 139, 145, 151, 157, 163],
      "min_frames": 37,
      "notes": "Mochi requires frames in format 6n+1, minimum 37"
    },
    "wan": {
      "frame_rule": "any",
      "notes": "Wan supports any frame count"
    },
    "hunyuan": {
      "frame_rule": "any",
      "notes": "HunyuanVideo supports any frame count"
    },
    "cogvideo": {
      "frame_rule": "any",
      "fixed_frames": 49,
      "notes": "CogVideo typically uses 49 frames"
    }
  },

  "vram_auto_select": {
    "rules": [
      {"max_vram_gb": 8, "preset": "low"},
      {"max_vram_gb": 12, "preset": "medium"},
      {"max_vram_gb": 20, "preset": "high"},
      {"max_vram_gb": 999, "preset": "ultra"}
    ],
    "fallback": "medium"
  },

  "model_min_vram": {
    "svd": 6,
    "ltx": 8,
    "wan": 10,
    "hunyuan": 12,
    "mochi": 16,
